<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/job.css">
    <title>Document</title>
</head>
<body>
<div class="menu">
      <ul id="list">
          <div class="contents">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/jobs">Jobs</a></li>
        <li><a href="/connect">Profiles</a></li>
        </div>
        <div id="logout">
          <li><a href="/logout">Logout</a></li>
        </div>
      </ul>
    </div>

<div class="container mb-4">
    <div class="row">
        <div class="author-content">
            <div class="author-card pb-3">
                <div class="author-card-cover" style="background-image: url(https://bootdey.com/img/Content/flores-amarillas-wallpaper.jpeg);"></div>
                <div class="author-card-profile">
                    <div class="author-card-avatar"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Daniel Adams">
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">Daniel Adams</h5>
                        <span class="author-card-position">ADMIN</span>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <!-- <a class="list-group-item"> -->
                        <!-- <i class="fa fa-user text-muted"></i>Filter</a> -->
                    <!-- <a class="list-group-item" href="#"> -->
                        <!-- <div class="d-flex justify-content-between align-items-center">
                            <div><i class="fa fa-tag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">My Tickets</div>
                            </div><span class="badge badge-secondary">4</span>
                        </div> -->
                        <a href="/jobForm"> <button class="list-group-item-btn">Add Job</button>  </a>
                </nav>
            </div>
        </div>
        <!-- Wishlist-->
        <div class="main-content">
           <% for(var i=0;i<jobs.length;i++){ %>
            <div class="cart-item d-md-flex justify-content-between">
                <div class="px-3 my-3">
                    <a class="cart-item-product" href="#">
                        <div class="cart-item-product-thumb"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Product"></div>
                        <div class="cart-item-product-info">
                            <h4 class="cart-item-product-title" style="font-size: 32px";><%= jobs[i].title %></h4>
                            <div class="text-lg text-body font-weight-medium pb-1" style="font-size: 12px">Salary: <%= jobs[i].salary %></div><div style="font-size: 12px">Description: <%=jobs[i].description %> <div class="text-success font-weight-medium" style="font-size: 12px">Type: <%=jobs[i].type %></div><div class="text-success font-weight-medium" style="font-size: 12px">Qualification Required: <%=jobs[i].qualification %></div></div>
                        </div>
                    </a> 
                </div>
            </div>
        <% } %>
        </div>
    </div>
</div>
</body>
</html>